<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: 'Alert !', sticky: false, time: 5000) %>
<% elsif flash[:error]%>
  <%= js add_gritter(flash[:error], title: 'Error !', sticky: false, time: 5000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: 'For your information:', sticky: false, time: 5000) %>
<% end %>